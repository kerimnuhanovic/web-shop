<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/promijeniLozinkuTrgovca.css' />
    <link rel='stylesheet' href='/stylesheets/header.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    <script>
        function promijeniLozinku() {
            var staraLozinka = document.getElementById('staraLozinka').value;
            var novaLozinka = document.getElementById('novaLozinka').value;
            var potvrdaLozinke = document.getElementById('potvrdaLozinke').value;

            $.ajax({
                url: "/trgovac/unesinovuLozinku2/" + staraLozinka + "/" + novaLozinka + "/" + potvrdaLozinke,
                type: 'POST',
            }).done(function(data) {
                console.log(data);
                if(data === "ok")
                    alert("Uspjesna promjena");
                else
                    alert("pogresni podaci");
            });


        }
    </script>
    <title>Promijenite lozinku</title>
</head>
<body>

<div class="header">
    <header class="container-fluid">
        <div class="h row pb-3">
            <h1 class="text-center pt-3 display-3 text-white" style="text-shadow: 2px 2px black">WEB shop</h1><br>
            <div class="f-cont">

                <p class="fs-6 text-white" style="text-shadow: 1px 1px black">Pretražujte i uživajte u kopovini</p>

            </div>
        </div>
    </header>

    <navbar class="okvir-navbara">
        <!--vase narudzbe, trgovine, urediprofil*/-->
        <div class="dio prvi border-end border-white" onclick="prikaziDD()">
            <div class="p-dio">
                <p class="">Trgovine</p>
            </div>
            <ul class="lista-dd" id="lista-dd">
                <li class="p-3 text-center" onclick="window.location.href= '/trgovac/profil'">Vaša trgovina</li>
                <li class="p-3 text-center" onclick="window.location.href= '/chat/trgovac'">Chat sa kupcima</li>

            </ul>
        </div>
        <div class="dio prvi border-end border-white" onclick="prikaziDD2()">
            <div class="p-dio">
                <p class="">Vaši artikli</p>
            </div>
            <ul class="lista-dd" id="lista-dd2">
                <li class="p-3 text-center" onclick="window.location.href= '/trgovac/spisakArtikala'">Spisak artikala</li>
                <li class="p-3 text-center" onclick="window.location.href= '/trgovac/dodajArtikal'">Dodaj artikal</li>

            </ul>
        </div>
        <div class="dio prvi border-end border-white" onclick="window.location.href= '/trgovac/narudzbe'">
            <div class="p-dio">
                <p class="">Narudžbe</p>
            </div>
        </div>
        <div class="dio prvi" onclick="prikaziDD3()">
            <div class="p-dio">
                <p class="">Profil</p>
            </div>
            <ul class="lista-dd" id="lista-dd3">
                <li class="p-3 text-center" onclick="window.location.href= '/trgovac/urediProfil'">Uredi korisničke podatke</li>
                <li class="p-3 text-center" onclick="window.location.href= '/trgovac/promijeniLozinku'">Promijeni lozinku</li>
                <li class="p-3 text-center" onclick="window.location.href= '/trgovac/odjava'">Odjavi se</li>

            </ul>
        </div>

    </navbar>
</div>

<main>
    <div class="image"><img src="/images/pomocne/password.png"></div>
    <div class="okvir">

        <h1 class="display-6 mt-5 text-center">Promijenite lozinku</h1>
        <div class="segment-diva my-3">
        <!--<label for="staraLozinka">Stara lozinka: </label>-->
        <input class="p-1 rounded-1" type="password" id="staraLozinka" name="staraLozinka" placeholder="Stara lozinka">
        </div>
        <div class="segment-diva my-3">
        <!--<label for="novaLozinka">Nova lozinka: </label>-->
        <input class="p-1 rounded-1" type="password" id="novaLozinka" name="novaLozinka" placeholder="Nova lozinka">
        </div>
        <div class="segment-diva my-3">
        <!--<label for="potvrdaLozinke">Potvrdite lozinku: </label>-->
        <input class="p-1 rounded-1" type="password" id="potvrdaLozinke" name="potvrdaLozinke" placeholder="Potvrda lozinke">
        </div>
        <div class="segment-diva mb-5">
        <button onclick="promijeniLozinku()" class="btn btn-primary">Promijeni lozinku</button>
        </div>
    </div>

</main>


<script src="/javascripts/navbar.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>

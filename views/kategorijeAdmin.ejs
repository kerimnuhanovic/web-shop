<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/headerAdministrator.css' />
    <link rel='stylesheet' href='/stylesheets/kategorijeAdmin.css' />
    <title>WEB shop</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function dodaj_kat_trgovca() {
            var kategorija = document.getElementById('nova_kategorija_trgovca').value;
            $.ajax({
                url: "/administrator/dodajKategorijuTrgovca/"+kategorija,
                type: 'POST',
            }).done(function(data) {
                document.getElementById('nova_kategorija_trgovca').value = "";
                alert("Nova kategorija trgovca uspjesno dodana");
            });
        }
        function dodaj_kat_artikla() {
            var kategorija = document.getElementById('nova_kategorija_artikla').value;
            $.ajax({
                url: "/administrator/dodajKategorijuArtikla/"+kategorija,
                type: 'POST',
            }).done(function(data) {
                document.getElementById('nova_kategorija_artikla').value = "";
                alert("Nova kategorija artikla uspjesno dodana");
            });
        }
    </script>
</head>
<body>

<div class="header">
    <header class="container-fluid">
        <div class="h row pb-3">
            <h1 class="text-center pt-3 display-3 text-white" style="text-shadow: 2px 2px black">WEB shop</h1><br>
            <div class="f-cont">

                <p class="fs-6 text-white" style="text-shadow: 1px 1px black">Pretražujte i uživajte u kopovini</p>

            </div>
        </div>
    </header>

    <navbar class="okvir-navbara">
        <!--vase narudzbe, trgovine, urediprofil*/-->
        <div class="dio prvi border-end border-white">
            <div class="p-dio" onclick="window.location.href = '/administrator/statusiKorisnika'">
                <p class="">Status korisnika</p>
            </div>

        </div>
        <div class="dio prvi border-end border-white">
            <div class="p-dio">
                <p class="">Chat</p>
            </div>

        </div>
        <div class="dio prvi border-end border-white"  onclick="prikaziDD()">
            <div class="p-dio">
                <p class="">Statistika</p>
            </div>
            <ul class="lista-dd" id="lista-dd">
                <li class="p-3 text-center" onclick="window.location.href='/administrator/statistika'">Statistika grafički</li>
                <li class="p-3 text-center" onclick="window.location.href='/administrator/statistikaTabelarno'">Statistika tabelarno</li>

            </ul>
        </div>
        <div class="dio prvi">
            <div class="p-dio" onclick="window.location.href = '/administrator/kategorije'">
                <p class="">Kategorije</p>
            </div>
        </div>

    </navbar>
</div>

<main class="my-3 py-3">
    <div>
    <div class="box-kategorijeTrgovaca mx-4 p-3">
        <h4 style="font-weight: lighter;color: #00B7FF">Kategorije trgovaca</h4>
        <%for(let i = 0; i < kategorijeTrgovca.length; i++) {%>
            <p><%=kategorijeTrgovca[i].kategorija%></p>

        <%}%>
    </div>
    <div class="okvir  mx-4 mt-4 mb-4 mb-sm-0">
        <input type="text" id="nova_kategorija_trgovca" class="p-1 mb-2">
        <button class="btn btn-info text-white" onclick="dodaj_kat_trgovca()">Dodaj kategoriju</button>
    </div>
    </div>
    <div>
    <div class="box-kategorijeTrgovaca mx-4 p-3">
        <h4 style="font-weight: lighter;color: #00B7FF">Kategorije artikala</h4>
        <%for(let i = 0; i < kategorijeArtikla.length; i++) {%>
        <p><%=kategorijeArtikla[i].kategorija%></p>
        <%}%>
    </div>
        <div class="okvir  mx-4 mt-4 ">
            <input type="text" id="nova_kategorija_artikla" class="p-1 mb-2">
            <button class="btn btn-info text-white" onclick="dodaj_kat_artikla()">Dodaj kategoriju</button>
        </div>

    </div>
</main>





<script src="/javascripts/navbarAdmin.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

</body>
</html>
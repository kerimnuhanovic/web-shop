<!DOCTYPE html>
<html>
<head>
    <title>Uredite profil</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/urediProfilKupca.css' />
    <link rel='stylesheet' href='/stylesheets/headerKupac.css' />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function promijeniLozinku() {
            var staraSifra = document.getElementById('staraSifra').value;
            var novaSifra = document.getElementById('novaSifra').value;
            var potvrda = document.getElementById('potvrda').value;
            if(novaSifra !== potvrda) {
                alert("Pogresno ste potvrdili sifru");
                return;
            }
            $.ajax({
                url: "/kupac/promijeniLozinkuKupca/" + staraSifra + "/" + novaSifra,
                type: 'POST',
            }).done(function(data) {
                if(data === "ok")
                    alert("Lozinka je promijenjena");
                else alert("Pogrešno ste unijeli staru lozinku");
            });

        }
    </script>


</head>
<body>

<div class="header">
    <header class="container-fluid">
        <div class="h row pb-3">
            <h1 class="text-center pt-3 display-3 text-white" style="text-shadow: 2px 2px black">WEB shop</h1><br>
            <div class="f-cont">

                <p class="fs-6 text-white" style="text-shadow: 1px 1px black">Pretražujte i uživajte u kopovini</p>

            </div>
        </div>
    </header>

    <navbar class="okvir-navbara">
        <!--vase narudzbe, trgovine, urediprofil*/-->
        <div class="dio prvi border-end border-white" onclick="window.location.href='/kupac/naslovna'">
            <div class="p-dio">
                <p class="">Naslovna</p>
            </div>

        </div>
        <div class="dio prvi border-end border-white" onclick="prikaziDD2()">
            <div class="p-dio">
                <p class="">Trgovine</p>
            </div>
            <ul class="lista-dd" id="lista-dd2">
                <li class="p-3 text-center" onclick="window.location.href='/kupac/pregledTrgovaca'">Trgovine</li>
                <li class="p-3 text-center" onclick="window.location.href='/chat/kupac'">Chat</li>

            </ul>

        </div>
        <div class="dio prvi border-end border-white" onclick="prikaziDD()">
            <div class="p-dio">
                <p class="">Narudžbe</p>
            </div>
            <ul class="lista-dd" id="lista-dd">
                <li class="p-3 text-center" onclick="window.location.href='/kupac/prikaziKorpu'">Korpa</li>
                <li class="p-3 text-center" onclick="window.location.href='/kupac/prikaziNarudzbe'">Narudžbe</li>

            </ul>
        </div>
        <div class="dio prvi" onclick="prikaziDD3()">
            <div class="p-dio">
                <p class="">Profil</p>
            </div>
            <ul class="lista-dd" id="lista-dd3">
                <li class="p-3 text-center" onclick="window.location.href='/kupac/urediProfilKupca'">Uredi profil</li>
                <li class="p-3 text-center" onclick="window.location.href= '/kupac/odjava'">Odjavi se</li>

            </ul>
        </div>

    </navbar>
</div>
<main>
    <div class="okvir mt-3 mt-sm-0">
        <div class="cjeloviti-prvi-div me-sm-3">
            <img src="/images/pomocne/settings.png" class="settings">
            <div class="prvi-div">
            <form method="post" action="/kupac/promijeniSlikuProfila" enctype="multipart/form-data" class="mx-3 forma1">
                <!--<label for="profilna">Promijeni sliku profila</label>-->
                <div class="my-3 div-forme">
                    <input class="form-control mx-lg-1" type="file" id="profilna" name="profilna" required>
                    <input type="submit" value="Promijeni profilnu sliku" class="btn btn-primary mt-1 mt-lg-0">
                </div>
                <!--
                <input type="file" id="profilna" name="profilna" required>
                <input type="submit" value="Promijeni profilnu sliku">-->
            </form>

            <form method="post" action="/kupac/promijeniCoverSliku" enctype="multipart/form-data" class="mx-3">
                <!--<label for="cover">Promijeni cover sliku </label>-->
                <div class="my-3 div-forme">
                    <input class="form-control mx-lg-1" type="file" id="cover" name="cover" required>
                    <input type="submit" value="Promijeni cover sliku" class="btn btn-primary mt-1 mt-lg-0">
                </div>
                <!--
                <input type="file" id="cover" name="cover" required>
                <input type="submit" value="Promijeni cover sliku">-->
            </form>

            </div>
        </div>
        <div class="cjeloviti-drugi-div mt-3 mt-sm-0 mb-5 mb-sm-0 mt-sm-0">
            <img src="/images/pomocne/password.png" class="password">
            <div class="drugi-div">
            <h3>Promijenite lozinku</h3>
            <input type="password" id="staraSifra" placeholder="Stara lozinka" class="p-1 my-2 rounded-1">

            <input type="password" id="novaSifra" placeholder="Nova lozinka" class="p-1 my-2 rounded-1">

            <input type="password" id="potvrda" placeholder="Potvrdite lozinku" class="p-1 my-2 rounded-1">

            <button onclick="promijeniLozinku()" class="btn btn-primary my-2 btn-lozinka">Promijenite lozinku</button>
            </div>
        </div>
    </div>
</main>
</body>

    <script src="/javascripts/navbarKupac.js"></script>

</html>

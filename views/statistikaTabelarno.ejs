<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/statistikaTabelarno.css" />
    <link rel="stylesheet" href="/stylesheets/headerAdministrator.css" />
    <title>WEB shop</title>
</head>
<body>

<div class="header">
    <header class="container-fluid">
        <div class="h row pb-3">
            <h1 class="text-center pt-3 display-3 text-white" style="text-shadow: 2px 2px black">WEB shop</h1><br>
            <div class="f-cont">

                <p class="fs-6 text-white" style="text-shadow: 1px 1px black">Pretražujte i uživajte u kopovini</p>

            </div>
        </div>
    </header>

    <navbar class="okvir-navbara">
        <!--vase narudzbe, trgovine, urediprofil*/-->
        <div class="dio prvi border-end border-white">
            <div class="p-dio" onclick="window.location.href = '/administrator/statusiKorisnika'">
                <p class="">Status korisnika</p>
            </div>

        </div>
        <div class="dio prvi border-end border-white">
            <div class="p-dio">
                <p class="">Chat</p>
            </div>

        </div>
        <div class="dio prvi border-end border-white" onclick="prikaziDD()">
            <div class="p-dio">
                <p class="">Statistika</p>
            </div>

            <ul class="lista-dd" id="lista-dd">
                <li class="p-3 text-center" onclick="window.location.href='/administrator/statistika'">Statistika grafički</li>
                <li class="p-3 text-center" onclick="window.location.href='/administrator/statistikaTabelarno'">Statistika tabelarno</li>

            </ul>
        </div>
        <div class="dio prvi">
            <div class="p-dio" onclick="window.location.href = '/administrator/kategorije'">
                <p class="">Kategorije</p>
            </div>
        </div>

    </navbar>
</div>


<h1 class="text-center mt-2" style="color: #00B7FF; font-weight: lighter">Statistika WEB shopa</h1>
<main>
    <table class="table">
        <caption class="ms-2">Broj korisnika</caption>
        <tr>
            <th>Broj trgovaca</th>
            <th>Broj kupaca</th>
            <th>Ukupno</th>
        </tr>
        <tr class="red-hover">
            <td><%=brojTrgovaca%></td>
            <td><%=brojKupaca%></td>
            <td><%=parseInt(brojTrgovaca) + parseInt(brojKupaca)%></td>
        </tr>
    </table>
    <table class="table">
        <caption>Broj artikala po kategorijama</caption>
        <tr>
            <th>Kategorija artikla</th>
            <th>Broj artikala</th>
        </tr>
        <%for (let i=0;i<statistikaArtikala.length; i++) {%>
            <tr class="red-hover">
                <td><%=statistikaArtikala[i].kategorija%></td>
                <td><%=statistikaArtikala[i].broj%></td>
            </tr>
        <%}%>
    </table>
    <table class="table">
        <caption>Broj trgovaca po kategorijama</caption>
        <tr>
            <th>Kategorije trgovca</th>
            <th>Broj trgovaca</th>
        </tr>
        <%for (let i=0;i<statistikaTrgovaca.length;i++) {%>
            <tr class="red-hover">
                <td><%=statistikaTrgovaca[i].kategorija%></td>
                <td><%=statistikaTrgovaca[i].broj%></td>
            </tr>
        <%}%>
    </table>
    <table class="table">
        <caption>Broj narudžbi po statusu</caption>
        <tr>
            <th>Status narudžbe</th>
            <th>Broj narudžbi</th>
        </tr>
        <%for (let i=0;i<brojNarudzbi.length;i++) {%>
            <tr class="red-hover">
                <td><%=brojNarudzbi[i].status_narudzbe%></td>
                <td><%=brojNarudzbi[i].count%></td>
            </tr>
        <%}%>
    </table>
    <table class="table">
        <caption>10 najprodavanijih artikala</caption>
        <tr>
            <th>Artikal</th>
            <th>Broj prodanih</th>
        </tr>
        <%for (let i=0;i<najprodavanijiArtikli.length;i++) {%>
        <tr class="red-hover">
            <td><%=najprodavanijiArtikli[i].naziv%></td>
            <td><%=najprodavanijiArtikli[i].broj_prodanih%></td>
        </tr>
        <%}%>
    </table>
    <table class="table">
        <caption>Broj prodanih artikala po kategorijama</caption>
        <tr>
            <th>Kategorija</th>
            <th>Broj prodanih</th>
        </tr>
        <%for (let i=0;i<brojProdanihPoKategorijama.length;i++) {%>
        <tr class="red-hover">
            <td><%=brojProdanihPoKategorijama[i].kategorija%></td>
            <td><%=brojProdanihPoKategorijama[i].broj_prodanih%></td>
        </tr>
        <%}%>
    </table>
</main>


<script src="/javascripts/navbarAdmin.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

</body>
</html>